#include "GPIO_driver.h"
#include "RCC_driver.h"
#include "bsp.h"
#include "string.h"
#include "Timer_Driver.h"
#include <stdio.h>

char message[] = {'H','E','L','L','O','\r','\n'};
uint32_t test = 0x1U;
uint16_t ID = 0x55U;
uint8_t size = sizeof(test);

static void CANTxconfig();
static void CANInit();
static void CANRxconfig();

int main(void){
	GPIO_CAN1Init(GPIOA, GPIO_PIN_NO_11, 9);
	GPIO_CAN1Init(GPIOA, GPIO_PIN_NO_12, 9);
	GPIO_LEDInit();
	CANInit();
	CANTxconfig();
	CANRxconfig();
	//enter normal mode
	CAN1 ->MCR &= ~(1 << 0);
	//wait until CAN is in normal mode
	while(CAN1 ->MSR & (1 << 0));

	//request to send
	CAN1 ->sTxMailBox[0].TIR |= (1 << 0);
	while(1){

	}
}

static void CANInit(){
	//enable the clock for the bus
	RCC ->APB1ENR |= (1 << RCC_APB1ENR_CAN1EN);
	//clear sleep bit in MCR
	CAN1 ->MCR &= ~(1U << 1);
	//initialize the CAN bus
	CAN1 ->MCR |= (1 << 0);
	//wait until CAN enters initialization mode
	while(! (CAN1 ->MSR & (1 << 0)));
}

static void CANTxconfig(){
	//configure the timings
	 /* pre-scaler = 1
	 * number of time quanta = 16
	 * segment 1 = 13
	 * segment 2 = 2
	 * SJW = 1
	 */
	CAN1 ->BTR &= 0x00000000U;
	CAN1 ->BTR |= (1U << 24);//SWj
	CAN1 ->BTR |= (13U << 16);//seg1
	CAN1 ->BTR |= (2U << 20);//seg2
	CAN1 ->BTR |= (2U << 0);//BRP
	//enter loop back mode
	CAN1 ->BTR |= (1U << 30);
	//configure the mailbox
	CAN1 ->sTxMailBox[0].TIR &= 0x00000000U;
	CAN1 ->sTxMailBox[0].TIR |= (ID << 21);//ID
	CAN1 ->sTxMailBox[0].TIR &= ~(1U << 1);//RTR
	CAN1 ->sTxMailBox[0].TIR &= ~(1U << 2);//IDE
	CAN1 ->sTxMailBox[0].TDTR &= 0x00000000U;
	CAN1 ->sTxMailBox[0].TDTR |= (size << 0);//data size
	CAN1 ->sTxMailBox[0].TDLR &= 0x00000000U;
	CAN1 ->sTxMailBox[0].TDHR &= 0x00000000U;
	CAN1 ->sTxMailBox[0].TDLR = test;
	/*for(uint32_t i = 0; i < size; i++){
		if(i < 4){
			CAN1 ->sTxMailBox[0].TDLR |= (message[i] << (i * 4));
		}else{
			CAN1 ->sTxMailBox[0].TDHR |= (message[i] << (i * 4));
		}
	}*/
}

static void CANRxconfig(){
	CAN1 ->BTR &= 0x00000000U;
	CAN1 ->BTR |= (1U << 24);//SWj
	CAN1 ->BTR |= (13U << 16);//seg1
	CAN1 ->BTR |= (2U << 20);//seg2
	CAN1 ->BTR |= (2U << 0);//BRP
	//enable interrupt for pending messages on FIFO 0
	CAN1 ->IER |= (1U << 1);
	//configure the filter banks to accept all IDs
	//initialize the filter bank
	CAN1 ->FMR |= (1U << 0);
	CAN1 ->FMR &= ~(1U << 8);
	//set it to MASK MODE
	CAN1 ->FM1R &= ~(1 << 0);
	//use single 32bit register
	CAN1 ->FS1R |= (1 << 0);
	//assign the message to FIFO 0
	CAN1 ->FFA1R &= ~(1U << 0);
	//set the ID in the filter bank
	CAN1 ->sFilterRegister[0].FR1 = 0x55U << 5;
	//set the MASK
	CAN1 ->sFilterRegister[0].FR2 = 0x55U << 5;
	//activate the filter
	CAN1 ->FMR &= ~(1U << 0);
}
void CAN1_RX0_IRQHandler(void){
	GPIO_ToggleOutputPin(GPIOA, GPIO_PIN_NO_5);
}
