#ifndef INC_SPI_DRIVER_H_
#define INC_SPI_DRIVER_H_
#include "STMF446RE.h"


typedef struct{
	uint8_t  SPI_ModeConfig;
	uint8_t  SPI_BusConfig;
	uint8_t  SPI_SclkSpeed;
	uint8_t  SPI_DFF;
	uint8_t  SPI_COPL;
	uint8_t  SPI_CPHA;
	uint8_t  SPI_SSM;
}SPI_config;

typedef struct{
	SPI_type   *pSPIx;
	SPI_config config;
}SPI_Handle;




void SPI_CLKCNT(SPI_type *pSPIx, uint8_t EnorDi);
void SPI_Init(SPI_Handle *pSPIHandle);
void SPI_DeInit(SPI_config *pSPIx);
void SPI_SendData(SPI_type *pSPIx, uint8_t *pTX, uint32_t Len);
void SPI_ReceiveData(SPI_type *pSPIx, uint8_t *pRX, uint32_t Len);
void SPI_IRQInterruptConfig(uint8_t IRQNumber, uint8_t ENorDI);
void SPI_IRQPriorityConfig(uint8_t IRQNumber, uint32_t IRQPriority);
void SPI_IRQHandling(SPI_Handle *pSPI_Handle);

#endif /* INC_SPI_DRIVER_H_ */
